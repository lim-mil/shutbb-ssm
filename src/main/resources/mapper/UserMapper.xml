<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.limyel.shutbb.dao.UserDao">
    <sql id="userInfo">id, username, email, signature, status</sql>

    <sql id="allFields">
        id, created_at, updated_at, deleted, username, email, password, signature, status, avatar
    </sql>

    <resultMap id="user" type="user">
        <id property="id" column="id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="deleted" column="deleted"/>
        <result property="username" column="username"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
        <result property="signature" column="signature"/>
        <result property="status" column="status"/>
        <result property="avatar" column="avatar"/>
    </resultMap>

    <insert id="create" parameterType="user" keyProperty="id">
        insert into user (username, email, password) values (#{username}, #{email}, #{password})
    </insert>
    
    <select id="retriveById" resultMap="user">
        select <include refid="allFields"/> from user where id=#{id};
    </select>

    <select id="retrive" resultType="com.limyel.shutbb.entity.User" parameterType="com.limyel.shutbb.entity.User">
        select * from user
        <where>
            <if test="username != null">username=#{username}</if>
            <if test="email != null">and email=#{email}</if>
            <if test="password != null">and password=#{password}</if>
        </where>
    </select>

    <update id="update" parameterType="com.limyel.shutbb.entity.User">
        update user
        <set>
            <if test="signature != null">signature=#{signature},</if>
            <if test="status != null">status=#{status},</if>
            <if test="password != null">password=#{password},</if>
            <if test="avatar != null">avatar=#{avatar}</if>
        </set>
        where id=#{id};
    </update>

    <update id="deleteById">
        update user set deleted=true where id=#{id};
    </update>

    <select id="login" resultMap="user">
        select <include refid="allFields"/> from user where (username=#{usernameOrEmail} or email=#{usernameOrEmail}) and password=#{password};
    </select>

    <select id="retriveUserByUsername" resultType="com.limyel.shutbb.entity.User">
        select <include refid="userInfo"/> from user where username=#{username};
    </select>
</mapper>