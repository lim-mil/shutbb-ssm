<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.limyel.shutbb.dao.OperationDao">
    <sql id="allFields">
        id, created_at, updated_at, deleted, user_id, section_id
    </sql>
    <resultMap id="usersSections" type="usersSections">
        <id property="id" column="id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="deleted" column="deleted"/>
        <association property="user" column="user_id" select="com.limyel.shutbb.dao.UserDao.retriveById"/>
        <association property="section" column="section_id" select="com.limyel.shutbb.dao.SectionDao.retriveById"/>
    </resultMap>

    <insert id="createUsersSections" parameterType="usersSections" keyColumn="id" keyProperty="id">
        insert into users_sections (user_id, section_id) values (#{user.id}, #{section.id})
    </insert>

    <select id="existUsersSections" resultMap="usersSections" parameterType="usersSections">
        select <include refid="allFields"/> from users_sections where user_id=#{user.id} and section_id=#{section.id}
    </select>

    <update id="updateUsersSections" parameterType="usersSections">
        update users_sections
        <set>
            deleted=#{deleted}
        </set> where user_id=#{user.id} and section_id=#{section.id}
    </update>
</mapper>