<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.limyel.shutbb.dao.UsersSectionsDao">
    <sql id="allFields">
        id, created_at, updated_at, deleted, user_id, section_id
    </sql>

    <resultMap id="usersSections" type="usersSections">
        <id property="id" column="id"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="deleted" column="deleted"/>
        <association property="user" column="user_id" select="com.limyel.shutbb.dao.UserDao.retriveById">
            <id property="id" column="id"/>
            <result property="username" column="username"/>
            <result property="status" column="status"/>
            <result property="avatar" column="avatar"/>
        </association>
        <association property="section" column="section_id" select="com.limyel.shutbb.dao.SectionDao.retriveById">
            <id property="id" column="id"/>
            <result property="name" column="name"/>
        </association>
    </resultMap>

    <insert id="create" parameterType="usersSections">
        insert into users_sections (user_id, section_id) values (#{usersSections.user.id}, #{usersSections.section.id})
    </insert>

    <select id="retriveByUser" resultMap="usersSections">
        select <include refid="allFields"/> from users_sections where user_id=#{userId}
    </select>

    <update id="update" parameterType="usersSections">
        update users_sections set deleted=false where id=#{id} or (user_id=#{userId} and section_id=#{sectionId})
    </update>

    <update id="delete">
        update users_sections set deleted=true where id=#{id} or (user_id=#{userId} and section_id=#{sectionId})
    </update>
</mapper>