<mapper namespace="com.limyel.shutbb.dao.UserDao">
    <sql id="userInfo">username, email, password, signature, </sql>
    
    <insert id="create" parameterType="com.limyel.shutbb.entity.User">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null">
                username,
            </if>
            <if test="email != null">
                email,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="signature != null">
                signature,
            </if>
        </trim>
        <trim prefix=" values (" suffix=")" suffixOverrides=",">
            <if test="username != null">
                #{username},
            </if>
            <if test="email != null">
                #{email},
            </if>
            <if test="password != null">
                #{password},
            </if>
            <if test="signature != null">
                #{signature},
            </if>
        </trim>
    </insert>
    
